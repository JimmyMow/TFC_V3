<h1>New Challenge</h1>


<%= form_tag(challenges_url, method: 'post') do %>


  <div>
    <%= label_tag :call_type %><br />
    <%= text_field_tag :call_type %>
  </div>

  <div>
    <%= label_tag :quarter %><br />
    <%= text_field_tag :quarter %>
  </div>

  <div>
    <%= label_tag :time %><br />
    <%= text_field_tag :time %>
  </div>

  <div>
    <%= label_tag :game_id %><br />
    <%= number_field_tag :game_id %>
  </div>

  <div>
    <%= label_tag :description %><br />
    <%= text_field_tag :description %>
  </div>

  <div>
    <%= label_tag :commit_player_id %><br />
    <%= number_field_tag :commit_player_id %>
  </div>

  <div>
    <%= label_tag :fouled_player_id %><br />
    <%= number_field_tag :fouled_player_id %>
  </div>

  <div>
    <%= label_tag :ref_id %><br />
    <%= number_field_tag :ref_id %>
  </div>

  <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id %>
  </div>


  <div>
    <%= submit_tag "Create Challenge" %>
  </div>
<% end %>
