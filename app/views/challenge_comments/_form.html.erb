<%= form_for(@challenge_comment, remote: true) do |f| %>
  <%= f.text_field :text, placeholder: 'Write a comment...', :class => 'form-control' %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :challenge_id, :value => challenge.id %>
  <%= f.hidden_field :game_id, :value => challenge.game.id %>
<% end %>
