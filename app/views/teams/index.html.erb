<style type="text/css">
  h1 {
    text-align: center;
  }

  h2 {
    text-align: center;
  }

  .ribbon {
  background: #DDE1E6;
  height: 100%;
  max-width: 100%;
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
  }

  .logo-container {
  display: inline-block;
  padding: 5px;
  height: 50px;
  width: 50px;
  }


  .btn-default .Atlanta {
    color: red;
    background-color: red;
    border-color: red;
  }

</style>

<h1>NBA Teams</h1>

<div class='ribbon'>
  <% @teams.each do |team| %>
    <%= link_to image_tag(team.img_url, :class => 'logo-container'), team_url(team.id, team_id: team.id) %>
  <% end %>
</div>
<% if @specific_team.present? %>
<%= render 'show', team: @specific_team %>
<% end %>
