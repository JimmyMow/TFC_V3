<style type="text/css">
  form {
    text-align: center;
    margin-top: 200px;
  }

  .title {
    text-align: center;
    color: white;
  }

  body {
    background: url('/assets/kid-middle-finger.jpg') no-repeat fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
</style>

<h6 class='title'>Claim your voice</h6>

<div class="row">
  <div class="small-9 columns small-offset-2">
    <%= form_tag users_url, method: 'post' do %>
      <%= text_field_tag 'email', nil, placeholder: 'Email' %>
      <%= text_field_tag 'username', nil, placeholder: 'Username' %>
      <%= password_field_tag 'password', nil, placeholder: 'Password' %>
      <%= password_field_tag 'password_confirmation', nil, placeholder: 'Confirm Password' %>
      <%= submit_tag "Sign Up", :class => 'button radius expand' %>
    <% end %>
  </div>
</div>
