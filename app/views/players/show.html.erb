<style type="text/css">
  .player-div {
    background-color: #DDE1E6;
    border-radius: 5px;
  }

  .player-div h2 {
    border-bottom: solid 1px black;
    margin-left: 5px;
  }

 .player-attributes {
  display: inline;
  }

</style>

<div class='col-lg-12'>
  <div class='col-lg-4'>
  <div class='player-div'>
    <h2><%= @player.name %></h2>

      <div class='player-attributes'>
        <b>Number:</b>
       <%= @player.number %>


        <b>Team:</b>
        <%= link_to @player.team.name, teams_url(team_id: @player.team.id) %>
      </div>
    </div>
  </div>
</div>

