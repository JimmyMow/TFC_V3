  .header-background {
    background-color: rgba(#333, #333, #333, 1);
  }

  form {
    padding: 15px;
    /*margin-top: 50px;*/
  }

  .header {
    text-align: center;
    color: #f1f1f1;
  }

  h3 {
    text-align: center;
    /*color: #f1f1f1;*/
    border-bottom: solid 1px black;

    /*font-family: "Raleway";*/
  }

  .sign-up {
    background: lightgray;
    border-radius: 10px;
    margin-top: 100px;
    /*border: 3px solid black;*/
  }

  body {
  background: url('/assets/winner.jpg') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
