<style type="text/css">

<style type="text/css">
  .users p {
    text-align: center;
  }

  .score {
    color: #333333;
    float: right;
  }

  .fa, .fa-star {
    color: #D9534F;
  }

  .disagree {
    color: #D9534F;
  }

  .game-container {
    border-radius: 5px;
    background-color: #333333;
    border: 1px solid #D9534F;
    padding: 15px;
    margin: 15px;
    }

  .vs {
    font-size: 45px;
    color: white;
    font-family: "Raleway";
  }

  .top {
    text-align: center;
    border-bottom: 1px solid #D9534F;
  }

  .bottom {
    text-align: center;
    padding-top: 5px;
  }

  h2 {
    border-bottom: solid 1px white;
    text-align: center;
    color: white;
  }

  .bottom p {
    color: white;
  }

</style>

<div class="content">
  <div class="col-xs-12">
      <h2>Today's Games</h2>
    <% @games.each do |game| %>
    <div class="game-container">
      <div class="top">
        <%= image_tag game.home_team.img_url, :class => 'pull-left img-thumbnail' %>
        <span class="vs">VS.</span>
        <%= image_tag game.away_team.img_url, :class => 'pull-right img-thumbnail' %>
      </div>
      <div class="bottom">
        <p><i class="fa fa-flag disagree"></i> Challenges: <%= game.challenges.count %></p>
        <%= link_to "Watch this game", game_url(game.id), :class => 'button-negative' %>
      </div>
      </div>
    <% end %>
  </div> <!-- 12 -->
</div> <!-- content -->

<nav class="bar-tab">
  <ul class="tab-inner">
    <li class="tab-item">
      <%= link_to "<i class=\"fa fa-home\"></i>".html_safe, games_url  %>
    </li>
    <li class="tab-item">
      <%= link_to "Full Site", :mobile => 0 %>
    </li>
    <li class="tab-item">
      <%= link_to "Log Out", "#" %>
    </li>
  </ul>
</nav>
