<h1>Comment votes</h1>

<p><%= link_to 'Add a New Comment Vote', new_comment_vote_url %></p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th>Vote</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @comment_votes.each do |comment_vote| %>
    <tr>
      <td><%= comment_vote.user_id %></td>
      <td><%= comment_vote.comment_id %></td>
      <td><%= comment_vote.vote %></td>
  
      <td><%= link_to 'Show', comment_vote_url(comment_vote) %></td>
      <td><%= link_to 'Edit', edit_comment_vote_url(comment_vote) %></td>
      <td><%= link_to 'Destroy', comment_vote_url(comment_vote), method: 'delete', data: { confirm: "Do you really want to delete this comment_vote?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

